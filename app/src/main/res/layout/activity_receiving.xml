<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReceivingActivity">

    <Button
        android:id="@+id/addresCancelBtn"
        android:layout_width="132dp"
        android:layout_height="47dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="@color/material_blue"
        android:text="Назад"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addresAgreeBtn" />

    <AutoCompleteTextView
        android:id="@+id/streetAuthoComplete"
        android:layout_width="269dp"
        android:layout_height="53dp"
        android:layout_marginTop="40dp"
        android:hint="Введите название улицы"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cityAuthoComplete" />

    <AutoCompleteTextView
        android:id="@+id/houseAuthoComplete"
        android:layout_width="269dp"
        android:layout_height="53dp"
        android:layout_marginTop="40dp"
        android:hint="Введите номер дома"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/streetAuthoComplete" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="174dp"
        android:layout_marginLeft="174dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="196dp"
        android:layout_marginRight="196dp"
        android:text="Адрес"
        android:textColor="@color/material_blue"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.181"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <AutoCompleteTextView
        android:id="@+id/cityAuthoComplete"
        android:layout_width="269dp"
        android:layout_height="53dp"
        android:layout_marginTop="52dp"
        android:hint="Введите город"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/addresAgreeBtn"
        android:layout_width="132dp"
        android:layout_height="47dp"
        android:layout_marginTop="52dp"
        android:backgroundTint="@color/material_blue"
        android:text="Применить"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/houseAuthoComplete" />

</androidx.constraintlayout.widget.ConstraintLayout>