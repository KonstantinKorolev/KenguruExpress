<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderingActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="26dp"
                android:text="@string/infSender"
                android:textColor="@color/material_blue"
                android:textSize="12sp" />

            <AutoCompleteTextView
                android:id="@+id/cityAuthoCompleteAddr"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:hint="@string/cngAddressCity" />

            <AutoCompleteTextView
                android:id="@+id/streetAuthoCompleteAddr"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:hint="@string/cngAddressStreet" />

            <AutoCompleteTextView
                android:id="@+id/houseAuthoCompleteAddr"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:hint="@string/cngAddressHome" />


            <EditText
                android:id="@+id/editNameSurname"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:ems="10"
                android:hint="@string/cngAddressSurname"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/editName"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:ems="10"
                android:hint="@string/cngAddressName"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/editPatronymic"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:ems="10"
                android:hint="@string/cngAddressPatronimyc"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/editPhone"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:ems="10"
                android:hint="@string/cngAddressPhone"
                android:inputType="phone" />

            <EditText
                android:id="@+id/editDopPhone"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:ems="10"
                android:hint="@string/cngAddressDopPhone"
                android:inputType="phone" />

            <EditText
                android:id="@+id/editCompany"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:ems="10"
                android:hint="@string/cngAddressCompany"
                android:inputType="textPersonName"
                android:layout_marginStart="15dp" />

            <EditText
                android:id="@+id/editComment"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:ems="10"
                android:hint="@string/cngAddressComment"
                android:inputType="text"
                android:layout_marginStart="15dp" />

            <Button
                android:id="@+id/enterSenderBtn"
                android:layout_width="172dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/material_blue"
                android:text="@string/AddressBookSender" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="133dp"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:text="@string/infoAboutReceiver"
                android:textColor="@color/material_blue"
                android:textSize="12sp"
                android:layout_marginStart="30dp" />

            <AutoCompleteTextView
                android:id="@+id/cityAuthoCompleteAddr2"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:ems="10"
                android:hint="@string/cngAddressCity"
                android:layout_marginStart="15dp" />

            <AutoCompleteTextView
                android:id="@+id/streetAuthoCompleteAddr2"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:ems="10"
                android:hint="@string/cngAddressStreet"
                android:layout_marginStart="15dp" />

            <AutoCompleteTextView
                android:id="@+id/houseAuthoCompleteAddr2"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:ems="10"
                android:hint="@string/cngAddressHome"
                android:layout_marginStart="15dp" />

            <EditText
                android:id="@+id/editNameSurname2"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:ems="10"
                android:hint="@string/cngAddressSurname"
                android:inputType="textPersonName"
                android:layout_marginStart="15dp" />

            <EditText
                android:id="@+id/editName2"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:ems="10"
                android:hint="@string/cngAddressName"
                android:inputType="textPersonName"
                android:layout_marginStart="15dp" />

            <EditText
                android:id="@+id/editPatronymic2"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:ems="10"
                android:hint="@string/cngAddressPatronimyc"
                android:inputType="textPersonName"
                android:layout_marginStart="15dp" />

            <EditText
                android:id="@+id/editPhone2"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:ems="10"
                android:hint="@string/cngAddressPhone"
                android:inputType="phone"
                android:layout_marginStart="15dp" />

            <EditText
                android:id="@+id/editDopPhone2"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:ems="10"
                android:hint="@string/cngAddressDopPhone"
                android:inputType="phone"
                android:layout_marginStart="15dp" />

            <EditText
                android:id="@+id/editCompany2"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:ems="10"
                android:hint="@string/cngAddressCompany"
                android:inputType="textPersonName"
                android:layout_marginStart="15dp" />

            <EditText
                android:id="@+id/editComment2"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:ems="10"
                android:hint="@string/cngAddressComment"
                android:inputType="text"
                android:layout_marginStart="15dp" />

            <Button
                android:id="@+id/enterRecipientBtn"
                android:layout_width="173dp"
                android:layout_height="53dp"
                android:layout_marginStart="6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/material_blue"
                android:text="@string/receiverInAddressBook" />

            <Button
                android:id="@+id/addresAgreeBtnAddr"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="40dp"
                android:backgroundTint="@color/material_blue"
                android:text="@string/agreeBtn"
                android:layout_marginStart="40dp" />

            <Button
                android:id="@+id/addresCancelBtnAddr"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="40dp"
                android:backgroundTint="@color/material_blue"
                android:text="@string/returnBtn" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>