<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangeUserDataActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/changeDataTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="30dp"
                android:text="@string/changeData"
                android:textColor="@color/material_blue"
                android:textSize="20sp"
                android:textStyle="normal"
                android:layout_marginStart="35dp" />

            <EditText
                android:id="@+id/changeDataLastName"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:backgroundTint="@color/material_blue"
                android:ems="10"
                android:hint="@string/cngAddressSurname"
                android:inputType="textPersonName"
                android:layout_marginStart="15dp" />

            <EditText
                android:id="@+id/changeDataName"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/material_blue"
                android:ems="10"
                android:hint="@string/cngAddressName"
                android:inputType="textPersonName"
                android:layout_marginStart="15dp" />

            <EditText
                android:id="@+id/changeDataPatronymic"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/material_blue"
                android:ems="10"
                android:hint="@string/cngAddressPatronimyc"
                android:inputType="textPersonName"
                android:layout_marginStart="15dp" />

            <EditText
                android:id="@+id/changeDataPhone"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:backgroundTint="@color/material_blue"
                android:ems="10"
                android:hint="@string/cngAddressPhone"
                android:inputType="phone"
                android:layout_marginStart="15dp" />

            <Button
                android:id="@+id/confirmPhoneBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:backgroundTint="@color/material_blue"
                android:text="@string/agreePhone"
                android:layout_marginStart="25dp" />

            <Button
                android:id="@+id/cancelBtn"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="40dp"
                android:backgroundTint="@color/material_blue"
                android:text="@string/cancelBtn"
                android:layout_marginStart="40dp" />

            <Button
                android:id="@+id/confirmDataChangesBtn"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="40dp"
                android:backgroundTint="@color/material_blue"
                android:text="@string/agreeBtn"
                android:layout_marginStart="40dp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>