<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_blue"
    tools:context=".LoginActivity">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="57dp"
                android:layout_marginTop="30dp"
                android:text="@string/enterTitle"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:layout_marginStart="57dp" />

            <EditText
                android:id="@+id/emailLoginEditText"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/white"
                android:hint="@string/emailHint"
                android:inputType="textEmailAddress"
                android:text="xolir84324@cctyoo.com"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:layout_marginStart="18dp" />

            <EditText
                android:id="@+id/passwordLoginEditText"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/white"
                android:hint="@string/passwordHint"
                android:inputType="textPassword"
                android:text="20012GPStka"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:layout_marginStart="18dp" />

            <Button
                android:id="@+id/toRegisterBtn"
                style="@style/MyBordelessButtonStyle"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="18dp"
                android:insetBottom="9dp"
                android:text="@string/registerBtn"
                app:backgroundTint="@color/material_blue"
                android:layout_marginStart="18dp" />

            <Button
                android:id="@+id/forgetPasswordBtn"
                style="@style/MyBordelessButtonStyle"
                android:layout_width="183dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:textSize="11sp"
                android:insetBottom="9dp"
                android:text="@string/forgetPassword"
                app:backgroundTint="@color/material_blue"
                android:layout_marginStart="5dp"
                tools:ignore="SmallSp" />

            <Button
                android:id="@+id/acceptEmailBtn"
                style="@style/MyBordelessButtonStyle"
                android:layout_width="150dp"
                android:layout_marginLeft="18dp"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:insetBottom="9dp"
                android:text="@string/acceptEmail"
                app:backgroundTint="@color/material_blue" />

            <Button
                android:id="@+id/resendEmail"
                style="@style/MyBordelessButtonStyle"
                android:layout_width="180dp"
                android:layout_marginLeft="5dp"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"

                android:insetBottom="9dp"
                android:text="@string/resendEmail"
                android:textSize="12sp"
                app:backgroundTint="@color/material_blue"
                android:layout_marginStart="5dp" />

            <Button
                android:id="@+id/loginBtn"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:insetBottom="9dp"
                android:layout_marginLeft="40dp"
                android:text="@string/enterBtn"
                android:textSize="13sp"
                app:backgroundTint="@color/purple_700"
                android:layout_marginStart="40dp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>