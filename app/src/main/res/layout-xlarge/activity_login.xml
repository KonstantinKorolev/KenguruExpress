<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_blue"
    tools:context=".LoginActivity">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/acceptEmailBtn"
        style="@style/MyBordelessButtonStyle"
        android:layout_width="260dp"
        android:layout_height="69dp"
        android:layout_marginTop="12dp"
        android:insetBottom="9dp"
        android:text="@string/acceptEmail"
        android:textSize="35sp"
        app:backgroundTint="@color/material_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toRegisterBtn" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="124dp"
        android:text="@string/enterTitle"
        android:textColor="@color/white"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/emailLoginEditText"
        android:layout_width="500dp"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/white"
        android:hint="@string/emailHint"
        android:text="xolir84324@cctyoo.com"
        android:inputType="textEmailAddress"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/passwordLoginEditText"
        android:layout_width="500dp"
        android:layout_height="80dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/white"
        android:hint="@string/passwordHint"
        android:text="20012GPStka"
        android:inputType="textPassword"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailLoginEditText" />

    <Button
        android:id="@+id/loginBtn"

        android:layout_width="220dp"
        android:layout_height="100dp"
        android:insetBottom="9dp"
        android:text="@string/enterBtn"
        android:textSize="35sp"
        app:backgroundTint="@color/purple_700"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resendEmail"
        app:layout_constraintVertical_bias="0.141" />

    <Button
        android:id="@+id/toRegisterBtn"
        style="@style/MyBordelessButtonStyle"
        android:layout_width="270dp"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        android:insetBottom="9dp"
        android:text="@string/registerBtn"
        android:textSize="30sp"
        app:backgroundTint="@color/material_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordLoginEditText" />

    <Button
        android:id="@+id/forgetPasswordBtn"
        style="@style/MyBordelessButtonStyle"
        android:layout_width="470dp"
        android:layout_height="79dp"
        android:layout_marginTop="12dp"
        android:insetBottom="9dp"
        android:text="@string/forgetPassword"
        android:textSize="30sp"
        app:backgroundTint="@color/material_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/acceptEmailBtn" />

    <Button
        android:id="@+id/resendEmail"
        style="@style/MyBordelessButtonStyle"
        android:layout_width="390dp"
        android:layout_height="88dp"
        android:layout_marginTop="12dp"
        android:insetBottom="9dp"
        android:text="@string/resendEmail"
        android:textSize="30sp"
        app:backgroundTint="@color/material_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forgetPasswordBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>